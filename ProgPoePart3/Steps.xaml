        <TextBox x:Name="step" HorizontalAlignment="Left" Margin="298,59,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="274" TextChanged="TextBox_TextChanged" Height="113"/>
        <Label Content="please enter steps in order&#xD;&#xA;after every step press submit" HorizontalAlignment="Left" Height="49" Margin="122,91,0,0" VerticalAlignment="Top" Width="171"/>
