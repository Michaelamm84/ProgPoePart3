<Window x:Class="ProgPoePart3.Ingredient"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProgPoePart3"
        mc:Ignorable="d"
        Title="Ingredient" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="10">
            <Label Content="Ingredient Name:"/>
            <TextBox x:Name="txtIngName" Margin="0,0,0,10" Width="352"/>
            <Label Content="Quantity:"/>
            <TextBox x:Name="txtQuantity" Margin="0,0,0,10" Width="356"/>
            <Label Content="Unit of Measure:"/>
            <TextBox x:Name="txtUoM" Margin="0,0,0,10" Width="354"/>
            <Label Content="Calories:"/>
            <TextBox x:Name="txtCal" Margin="0,0,0,10" Width="356"/>
            <Label Content="Food Group:"/>
            <TextBox x:Name="txtFoodGroup" Margin="0,0,0,10" Width="357"/>
            <Button Content="Submit" Click="Submit_Click"/>
        </StackPanel>
    </Grid>
</Window>